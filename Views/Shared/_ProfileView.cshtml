<script>
    $(document).ready(function () {
        $('.edit-link').click(function (e) {
            e.preventDefault();

            // Toggle readonly attribute for input-select elements
            $('.input-select').each(function () {
                $(this).prop('readonly', function (_, readonly) { return !readonly; });
            });

            // Enable/disable Save and Cancel buttons
            $('.save-btn').prop('disabled', function (_, disabled) { return !disabled; });
            $('.cancel-btn').prop('disabled', function (_, disabled) { return disabled; });

            // Toggle text of edit link
            $(this).text(function (i, text) {
                return text === 'Edit' ? 'Cancel' : 'Edit';
            });
        });
    });
</script>


